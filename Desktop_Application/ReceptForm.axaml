<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Desktop_Application.ReceptForm"
        Title="ReceptForm">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="25">
        <TextBlock FontSize="46">Opret Recept</TextBlock>
        <TextBlock x:Name="Lægehus"></TextBlock>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Label>Patient Cpr: </Label>
            <TextBox 
                x:Name="Cpr" Width="200" MaxLength="10" 
                TextChanged="Cpr_OnTextChanged"
                Watermark="0000000000"></TextBox>
            <TextBlock Foreground="Red" IsVisible="True" x:Name="CprFejlBesked">*CPR skal være 10 cifre</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <ListBox x:Name="Ordinationer"
                     SizeChanged="Ordinationer_OnSizeChanged"></ListBox>
            <TextBlock Foreground="Red" IsVisible="True" x:Name="ListFejlBesked">*Tilføj Ordination</TextBlock>
        </StackPanel>
        
        <Button 
            x:Name="TilføjOrdinationBtn" 
            Click="TilføjOrdinationBtn_OnClick"
            Padding="10">Tilføj Ordination</Button>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Click="Button_OnClick">Tilbage</Button>
            <Button 
                x:Name="OpretReceptBtn" 
                Click="OpretReceptBtn_OnClick"
                IsEnabled="False">Opret Recept</Button>
        </StackPanel>
    </StackPanel>
</Window>
