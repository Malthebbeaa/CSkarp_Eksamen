<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Desktop_Application.MainWindow"
        Title="Desktop_Application">
    <StackPanel 
        HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
        <TextBlock FontSize="46">Apotek Forside</TextBlock>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Label>Lægehus ydernummer:</Label>
            <TextBox 
                Width="250" 
                x:Name="Searchbar"
                Watermark="100001"></TextBox>
            <Button Click="Button_OnClick">Søg</Button>
        </StackPanel>
        <ListBox 
            x:Name="Huse"
            SelectionChanged="Huse_OnSelectionChanged"></ListBox>
        <Button 
            x:Name="OpretReceptBtn" 
            IsVisible="False"
            Click="OpretReceptBtn_OnClick">Opret Recept</Button>
    </StackPanel>
</Window>
